                    TextWrapping="Wrap" />
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Exchange Vertices" />
            <CheckBox
                Grid.Row="2"
                Grid.Column="1"
                IsChecked="{Binding Path=ExchangeVertices, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Disconnected Multiplier" />

            <StackPanel
                Grid.Row="3"
                Grid.Column="1"
