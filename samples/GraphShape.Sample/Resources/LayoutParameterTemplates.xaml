            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Attraction Exponent" />
            <StackPanel
                Grid.Row="0"
                Grid.Column="1"
                Orientation="Horizontal">
                <Slider
                    MinWidth="100"
                    Minimum="0"
                    Maximum="5"
                    Value="{Binding Path=AttractionExponent, Mode=TwoWay}" />
                <TextBox Text="{Binding Path=AttractionExponent, Mode=TwoWay}" />
            </StackPanel>

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Repulsive Exponent" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                Orientation="Horizontal">
                <Slider
                    MinWidth="100"
                    Minimum="0"
                    Maximum="5"
                    Value="{Binding Path=RepulsiveExponent, Mode=TwoWay}" />
                <TextBox Text="{Binding Path=RepulsiveExponent, Mode=TwoWay}" />
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
