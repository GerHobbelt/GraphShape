                <Slider
                    x:Name="slider2"
                    Width="100"
                    Height="22"
                    Minimum="0"
                    Maximum="5"
                    Value="{Binding Path=DisconnectedMultiplier, Mode=TwoWay}" />
                <TextBlock
                    Text="{Binding Path=Value, ElementName=slider2, Mode=Default}"
                    TextWrapping="Wrap" />
            </StackPanel>
        </Grid>
    </DataTemplate>

    <!-- Meyer's ISOM DataTemplate -->
    <DataTemplate DataType="{x:Type simpleFdpLayout:ISOMLayoutParameters}">
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Width" />
                <StackPanel
                    Grid.Row="0"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Slider
                        x:Name="slider"
                        MinWidth="100"
                        Minimum="0"
                        Maximum="1000"
                        Value="{Binding Path=Width, Mode=TwoWay}" />
                    <TextBlock
                        Text="{Binding Path=Value, ElementName=slider, Mode=Default}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Height" />
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Slider
                        x:Name="slider2"
                        MinWidth="100"
                        Minimum="0"
                        Maximum="1000"
                        Value="{Binding Path=Height, Mode=TwoWay}" />
                    <TextBlock
                        Text="{Binding Path=Value, ElementName=slider2, Mode=Default}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Max Epochs" />
                <TextBox
                    Grid.Row="2"
                    Grid.Column="1"
                    Text="{Binding Path=MaxEpochs, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="3"
                    Grid.Column="0"
                    Text="Radius Constant Time" />
                <StackPanel
                    Grid.Row="3"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Slider
                        x:Name="slider3"
                        MinWidth="100"
                        Minimum="0"
                        Maximum="100"
                        Value="{Binding Path=RadiusConstantTime, Mode=TwoWay}" />
                    <TextBlock
                        Text="{Binding Path=Value, ElementName=slider3, Mode=Default}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="0"
                    Text="Initial Radius" />
                <StackPanel
                    Grid.Row="4"
                    Grid.Column="1"
                    Orientation="Horizontal">
                    <Slider
                        x:Name="slider4"
                        MinWidth="100"
                        Minimum="0"
                        Maximum="5"
                        Value="{Binding Path=InitialRadius, Mode=TwoWay}" />
                    <TextBlock
                        Text="{Binding Path=Value, ElementName=slider4, Mode=Default}"
                        TextWrapping="Wrap" />
                </StackPanel>

                <TextBlock
                    Grid.Row="5"
                    Grid.Column="0"
                    Text="Min Radius" />
                <TextBox
                    Grid.Row="5"
                    Grid.Column="1"
                    Text="{Binding Path=MinRadius, Mode=TwoWay}" />

                <TextBlock
                    Grid.Column="0"
                    Grid.Row="6"
                    Text="Initial Adaptation" />
                <TextBox
                    Grid.Row="6"
                    Grid.Column="1"
                    Text="{Binding Path=InitialAdaptation, Mode=TwoWay}" />

                <TextBlock
                    Grid.Row="7"
                    Grid.Column="0"
                    Text="Min Adaptation" />
                <TextBox
                    Grid.Row="7"
                    Grid.Column="1"
                    Text="{Binding Path=MinAdaptation}" />

                <TextBlock
                    Grid.Row="8"
                    Grid.Column="0"
                    Text="Cooling Factor" />
                <TextBox
                    Grid.Row="8"
                    Grid.Column="1"
                    Text="{Binding Path=CoolingFactor, Mode=TwoWay}" />
            </Grid>
        </StackPanel>
    </DataTemplate>

    <!-- LinLog DataTemplate -->
