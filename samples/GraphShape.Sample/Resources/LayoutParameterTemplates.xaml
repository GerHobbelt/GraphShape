                Maximum="1000"
                Value="{Binding Path=MaxIterations, Mode=TwoWay}" />
        </Grid>
    </DataTemplate>

    <!-- Sugiyama DataTemplate -->
    <DataTemplate DataType="{x:Type simpleHierarchicalLayout:SugiyamaLayoutParameters}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Text="Dirty Round" />
            <CheckBox
                Grid.Row="0"
                Grid.Column="1"
                IsChecked="{Binding Path=DirtyRound, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Horizontal Gap" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Path=HorizontalGap, Mode=TwoWay}"/>

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Vertical Gap" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Path=VerticalGap, Mode=TwoWay}" />

            <TextBlock
                Grid.Column="0"
                Grid.Row="3"
                Text="Phase1 Iteration Count" />
            <TextBox
                Grid.Row="3"
                Grid.Column="1"
                Text="{Binding Path=Phase1IterationCount, Mode=TwoWay}" />

            <TextBlock
                Grid.Column="0"
                Grid.Row="4"
                Text="Phase2 Iteration Count" />
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                Text="{Binding Path=Phase2IterationCount, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Minimize Hierarchical EdgeLong" />
            <CheckBox
                Grid.Row="5"
                Grid.Column="1"
                IsChecked="{Binding Path=MinimizeHierarchicalEdgeLong, Mode=TwoWay}" />
        </Grid>
    </DataTemplate>

    <!-- Efficient Sugiyama DataTemplate -->
    <DataTemplate DataType="{x:Type simpleHierarchicalLayout:EfficientSugiyamaLayoutParameters}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <TextBlock 
                Grid.Row="0"
                Grid.Column="0"
                Text="Layer gap" />
            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Text="{Binding Path=LayerDistance, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Text="Vertex gap" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Text="{Binding Path=VertexDistance, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Text="Position Mode" />
            <TextBox
                Grid.Row="2"
                Grid.Column="1"
                Text="{Binding Path=PositionMode, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Text="Minimize Edge Length" />
            <CheckBox
                Grid.Row="3"
                Grid.Column="1"
                IsChecked="{Binding Path=MinimizeEdgeLength, Mode=TwoWay}"
                Content="{Binding Path=MinimizeEdgeLength, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Text="Edge routing" />
            <ComboBox
                Grid.Row="4"
                Grid.Column="1"
                ItemsSource="{Binding Source={StaticResource SugiyamaEdgeRoutingEnum}, Mode=OneWay}"
                SelectedValue="{Binding Path=EdgeRouting, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Text="Optimize Width" />
            <CheckBox
                Grid.Row="5"
                Grid.Column="1"
                IsChecked="{Binding Path=OptimizeWidth, Mode=TwoWay}"
                Content="{Binding Path=OptimizeWidth, Mode=TwoWay}" />

            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Text="Layout Direction" />
            <ComboBox
                Grid.Row="6"
                Grid.Column="1"
                ItemsSource="{Binding Source={StaticResource LayoutDirectionEnum}, Mode=OneWay}"
                SelectedValue="{Binding Path=Direction, Mode=TwoWay}" />
        </Grid>
    </DataTemplate>

